import requests
import json

def get_movie_data(movie_title):
    api_key = "505480d7"  
    base_url = "http://www.omdbapi.com/"
    params = {
        't': movie_title,
        'apikey': api_key
    }

    response = requests.get(base_url, params=params)

    if response.status_code == 200:
        return response.json()
    else:
        return None

def main():
    print("–¥–æ–±—Ä–∞ –ø–∞–∂–∞–ª–æ–≤–∞—Ç—å –≤  –º—É–≤–∏ —Å–∫–∏–±–∏–¥–∏!")

    while True:
        command = input("–ø–∏—à–∏ –Ω–∞–∑–≤–∞–Ω–∏–µ –∫–∞–∫–∞—à–∫–∞–∞ (–∏–ª–∏ 'exit' –¥–ª—è –≤—ã—Ö–æ–¥–∞): ")
        if command.lower() == "exit":
            print("–ø–∞–∫–∞!")
            break

        movie_data = get_movie_data(command)

        if movie_data and movie_data.get('Response') == 'True':
            print(f"üé¨ {movie_data['Title']} ({movie_data['Year']})")
            print(f"—Ä–µ–∂–∏—Å–µ—Ä–µ: {movie_data['Director']}")
            print(f"–∂–∞–Ω—Ä–µ: {movie_data['Genre']}")
            print(f"—Ä–µ–π—Ç–∏–Ω–≥–µ: {movie_data['imdbRating']}")
            print(f"–æ–ø–∏—Å–∞–Ω–∏: {movie_data['Plot']}\n")
        else:
            print("–±–ª–∏–Ω —Ñ–∏–ª—å–º–∞ –Ω–µ—Ç. –Ω–∞–ø–∏—à–∏ –µ–∑–æ —Ä–∞–∑.\n")

if __name__ == "__main__":
    main()
